<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Fully transparent inner rectangle -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent" /> <!-- Fully transparent -->
            <corners android:radius="20dp" />
        </shape>
    </item>
    <!-- Semi-transparent background -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#55000000" /> <!-- Semi-transparent black -->
            <corners android:radius="20dp" />
        </shape>
    </item>
</layer-list> 